{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    {
      "src": "dist/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["public/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "methods": ["OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "https://*.moltbook.com, https://*.openclaw.network, https://portal.ai-agentic-wallet.com, https://ai-agentic-wallet.com",
        "Access-Control-Allow-Methods": "OPTIONS, POST, GET",
        "Access-Control-Allow-Headers": "Content-Type, X-PAYMENT, X-SLIPPAGE-BIPS, X-Platform-Id, x-algo-auth, User-Agent",
        "Access-Control-Max-Age": "86400"
      },
      "status": 204
    },

    {
      "src": "/api/portal/(.*)",
      "missing": [
        {
          "type": "header",
          "key": "user-agent"
        }
      ],
      "mitigate": {
        "action": "challenge"
      }
    },

    {
      "src": "/api/agent-action",
      "missing": [
        {
          "type": "header",
          "key": "x-algo-auth"
        }
      ],
      "mitigate": {
        "action": "deny"
      }
    },
    {
      "src": "/api/batch-action",
      "missing": [
        {
          "type": "header",
          "key": "x-algo-auth"
        }
      ],
      "mitigate": {
        "action": "deny"
      }
    },
    {
      "src": "/api/execute",
      "missing": [
        {
          "type": "header",
          "key": "x-algo-auth"
        }
      ],
      "mitigate": {
        "action": "deny"
      }
    },

    {
      "src": "/api/(.*)",
      "missing": [
        {
          "type": "header",
          "key": "user-agent"
        }
      ],
      "mitigate": {
        "action": "challenge"
      }
    },

    {
      "src": "/api/(.*)",
      "methods": ["OPTIONS", "POST", "GET"],
      "headers": {
        "Access-Control-Allow-Origin": "https://*.moltbook.com, https://*.openclaw.network, https://portal.ai-agentic-wallet.com",
        "Access-Control-Allow-Methods": "OPTIONS, POST, GET",
        "Access-Control-Allow-Headers": "Content-Type, X-PAYMENT, X-SLIPPAGE-BIPS, X-Platform-Id, x-algo-auth, User-Agent",
        "Access-Control-Max-Age": "86400",
        "X-Frame-Options": "DENY",
        "X-Content-Type-Options": "nosniff",
        "Strict-Transport-Security": "max-age=63072000; includeSubDomains; preload",
        "Referrer-Policy": "strict-origin-when-cross-origin"
      },
      "dest": "dist/index.js"
    },
    {
      "src": "/health",
      "methods": ["GET"],
      "headers": {
        "X-Frame-Options": "DENY",
        "X-Content-Type-Options": "nosniff",
        "Strict-Transport-Security": "max-age=63072000; includeSubDomains; preload"
      },
      "dest": "dist/index.js"
    },
    {
      "src": "/(.*)",
      "headers": {
        "X-Frame-Options": "DENY",
        "X-Content-Type-Options": "nosniff",
        "Strict-Transport-Security": "max-age=63072000; includeSubDomains; preload"
      },
      "dest": "dist/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
